{%  extends 'base.html.twig' %}

{% block title %}SymphArt Articles{%  endblock %}

{% block body %}
<h1>Articles</h1>
    {% if articles %}
        <table id="articles" class="table table-striped">
            <thead>
            <tr>
                <th>Article Title</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="/article/{{ article.id }}" class="btn" class="btn-dark">Show</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No articles to display</p>
    {% endif %}
{% endblock %}
